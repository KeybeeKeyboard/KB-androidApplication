<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_current_theme"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp50"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp5"
        android:layout_marginRight="@dimen/dp17"
        android:padding="14dp" />

    <it.keybeeproject.keybee.view.TextViewCustom
        android:id="@+id/text_themeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/img_apply_theme"
        android:layout_toRightOf="@id/img_current_theme"
        android:paddingBottom="@dimen/dp15"
        android:paddingTop="@dimen/dp15"
        android:textSize="@dimen/sp18"
        app:custom_font="@string/font_dosis_regular" />

    <ImageView
        android:id="@+id/img_apply_theme"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp50"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/dp15" />
</RelativeLayout>